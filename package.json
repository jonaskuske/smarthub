{
  "name": "smarthub",
  "version": "1.0.0",
  "main": "server/index.js",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start": "node server/index.js",
    "server:dev": "nodemon server/index.js --watch server --watch shared",
    "client:dev": "parcel serve client/index.html -p 8081 -d client/.dev --log-level 2",
    "serve": "run-p server:dev client:dev",
    "build": "parcel build client/index.html -d client/dist --no-cache"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "connect-history-api-fallback": "^1.6.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "vue": "^2.6.11",
    "vue-hot-reload-api": "^2.3.4",
    "vue-router": "^3.1.5"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.0.6",
    "@vue/component-compiler-utils": "^3.1.1",
    "address": "^1.1.2",
    "autoprefixer": "^9.7.4",
    "default-gateway": "^5.0.5",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-vue": "^6.2.1",
    "http-proxy-middleware": "^1.0.0",
    "lint-staged": "^10.0.7",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-clean-dist": "0.0.6",
    "parcel-plugin-static-files-copy": "^2.3.1",
    "postcss-import": "^12.0.1",
    "prettier": "^1.19.1",
    "tailwindcss": "^1.2.0",
    "tailwindcss-aspect-ratio": "^3.0.0",
    "tailwindcss-interaction-variants": "^3.1.0",
    "tailwindcss-pseudo-elements": "^1.1.2",
    "vue-template-compiler": "^2.6.11",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --fix"
    ],
    "*.{json,css,webmanifest,md,html}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "tabWidth": 2
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "browser": true,
      "serviceworker": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended",
      "plugin:prettier/recommended",
      "prettier/vue"
    ]
  },
  "posthtml": {
    "recognizeSelfClosing": true
  },
  "htmlnano": {
    "minifySvg": false
  },
  "staticFiles": {
    "staticPath": "client/static"
  }
}
